<div id="user-login-bar">
  <%= form_tag(root_path, :method => "get", id: "user-login-form") do %>
      <%= text_field_tag :username, params[:username], placeholder: "Enter new username", class: "user-login-box" %>
      <%= submit_tag "Login", :name => nil, class: "user-login-button" %>
  <% end %>
</div>

<h1>Welcome to Battleship 2.0</h1>

<div>for user: <%= @user.username %></div>

<div>Available games:
  <ul>
    <% @available_games.each do |game| %>
      <% if @user.id != game.user_1_id %>
      <li><%= link_to game.user_1.username, game_index_path(:game_id => game.id) %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<div id="new-game">
  <%= form_tag(game_index_path, :method => "get", id: "new-game-form") do %>
      <%= submit_tag "Begin new match", :name => nil, class: "begin-match-button" %>
  <% end %>
</div>